{
  "name": "musicplayer",
  "description": "a music player for beets.io based on modern web technologies",
  "version": "0.0.1",
  "scripts": {
    "dev": "webpack-dev-server --progress --inline --colors",
    "build": "webpack --progress --colors && sed -i s/GIT_HASH/$(git rev-parse --short HEAD)/g public/sw.js || echo 'ignoring sed warning'",
    "lint": "jshint src/*js && eslint src/*js",
    "test": "nyc mocha -r babel-register -r jsdom-global/register"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dependencies": {
    "chai": "^4.1.2",
    "dialog-polyfill": "^0.4.9",
    "hammerjs": "^2.0.8",
    "lodash": "^4.17.4",
    "material-design-lite": "^1.3.0",
    "mocha": "^3.5.3",
    "nosleep.js": "^0.7.0",
    "vue": "^2.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.26.0",
    "clean-webpack-plugin": "^0.1.17",
    "copy-webpack-plugin": "^4.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.8.0",
    "fake-indexeddb": "^2.0.3",
    "file-loader": "^1.1.4",
    "html-webpack-plugin": "^2.30.1",
    "jsdom": "11.3.0",
    "jsdom-global": "3.0.2",
    "jshint": "^2.9.5",
    "jshint-loader": "^0.8.4",
    "mock-browser": "^0.92.14",
    "nock": "^9.0.22",
    "node-fetch": "^1.7.3",
    "nyc": "^11.2.1",
    "service-worker-loader": "^0.5.0",
    "style-loader": "^0.19.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.9.2"
  }
}
